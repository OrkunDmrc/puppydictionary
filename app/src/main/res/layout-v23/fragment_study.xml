<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Study"
    android:padding="5dp"
    android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/text">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/background"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/selection_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/button"
                android:foreground="@drawable/ic_baseline_format_list_bulleted_24"
                android:padding="30dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"/>
            <ImageView
                android:id="@+id/voice_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/card"
                android:foreground="@drawable/ic_baseline_volume_up_24"
                android:padding="30dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"/>
            <ImageView
                android:id="@+id/pronunciation_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/empty"
                android:foreground="@drawable/ic_baseline_mic_24"
                android:padding="30dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"/>
            <ImageView
                android:id="@+id/check_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/empty"
                android:foreground="@drawable/ic_baseline_checklist_rtl_24"
                android:padding="30dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_weight="1">
            <FrameLayout
                android:id="@+id/study_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background">
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>