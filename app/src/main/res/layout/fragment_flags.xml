<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Flags"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/learnLang"
                    android:textColor="@color/text"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/learningLangOpEn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_england_flag"
                    android:background="@color/text"
                    android:padding="5dp"/>

                <ImageView
                    android:id="@+id/learningLangOpDe"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_germany_flag"
                    android:background="@color/text"
                    android:padding="5dp"/>

                <ImageView
                    android:id="@+id/learningLangOpTr"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_turkey_flag"
                    android:background="@color/text"
                    android:padding="5dp"/>

                <!--<ImageView
                    android:id="@+id/myLangImageView"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_margin="10dp"
                    android:background="@color/empty" />-->

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/myLang"
                    android:textColor="@color/text"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/myLangOpEn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_england_flag"
                    android:background="@color/text"
                    android:padding="5dp"/>

                <ImageView
                    android:id="@+id/myLangOpDe"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_germany_flag"
                    android:background="@color/text"
                    android:padding="5dp"/>

                <ImageView
                    android:id="@+id/myLangOpTr"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_turkey_flag"
                    android:background="@color/text"
                    android:padding="5dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button"
                android:padding="10dp"
                android:text="@string/next"
                android:textColor="@color/text"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout >