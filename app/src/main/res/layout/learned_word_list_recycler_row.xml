<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/background"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <LinearLayout
            android:id="@+id/open_desc_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/word_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginHorizontal="5dp"
                android:text="car"/>
            <TextView
                android:id="@+id/phonetic_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="5dp"
                android:text="(kɑː)"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/word_information"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="end">
            <Button
                android:id="@+id/pronunciation_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:foreground="@drawable/ic_baseline_volume_up_24"/>
            <Button
                android:id="@+id/add_remove_learned_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="2dp"
                android:foreground="@drawable/ic_baseline_bookmark_24"/>
            <Button
                android:id="@+id/add_remove_favorite_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="2dp"
                android:foreground="@drawable/ic_baseline_favorite_border_24"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

