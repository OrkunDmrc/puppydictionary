<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.StudySelection"
        android:background="@color/background"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:layout_marginTop="50dp"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/phonetic_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:background="@color/button"
            android:layout_marginHorizontal="25dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/word_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginHorizontal="5dp"
                android:text="car"/>
            <TextView
                android:id="@+id/phonetic_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="5dp"
                android:padding="2dp"
                android:text="(kɑː)"/>
        </LinearLayout>
        <TextView
            android:id="@+id/speech_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="söylenen"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/text"
            android:layout_marginTop="2dp"/>
        <LinearLayout
            android:id="@+id/mic_button_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:background="@color/card"
            android:layout_marginVertical="5dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/mic_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_baseline_mic_24"/>
        </LinearLayout>
        <Button
            android:id="@+id/not_speak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:padding="0dp"
            android:text="@string/cantSpeak"
            android:textColor="@color/text"
            android:textSize="15dp"/>
        <LinearLayout
            android:id="@+id/description_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:orientation="vertical"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/description_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text="isim:\naraba, araç"
                    android:textColor="@color/text"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:text="@string/next"
            android:textColor="@color/text"
            android:textSize="25dp"
            android:textStyle="bold"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>