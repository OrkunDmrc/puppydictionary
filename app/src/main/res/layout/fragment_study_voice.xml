<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.StudySelection"
        android:background="@color/background"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:layout_marginTop="50dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:background="@color/card"
            android:layout_marginVertical="5dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/voice_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_baseline_volume_up_24"/>
            <TextView
                android:id="@+id/button_phonetic_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="5dp"
                android:padding="2dp"
                android:text="(kɑː)"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp">
            <EditText
                android:id="@+id/word_text"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@color/card"
                android:textColorHint="@color/text"
                android:textColor="@color/text"
                android:layout_weight="7"
                android:textSize="20dp"
                android:padding="10dp"
                android:ellipsize="none"
                android:hint="@string/word"
                android:singleLine="true"/>
            <ImageButton
                android:id="@+id/check_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_check_24"
                android:background="@color/button"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/description_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/des_word_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text="car"
                    android:textColor="@color/text"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/phonetic_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text="(kɑː)"
                    android:textAlignment="center"
                    android:textColor="@color/text"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/description_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text="isim:\naraba, araç"
                    android:textColor="@color/text"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:text="@string/next"
            android:textColor="@color/text"
            android:textSize="25dp"
            android:textStyle="bold"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>