<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.StudySelection"
        android:background="@color/background"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:layout_marginTop="50dp"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/phonetic_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:background="@color/button"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="10dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/word_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginHorizontal="5dp"
                android:text="car"/>
            <TextView
                android:id="@+id/phonetic_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="5dp"
                android:padding="2dp"
                android:text="(kɑː)"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:backgroundTint="@color/card"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="5dp"
            android:padding="2dp">
            <TextView
                android:id="@+id/option_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/text"
                android:text="çalışmak, çalışma, çalışmak, çalışma, çalışmak, çalışma, çalışmak, çalışma, çalışma, çalışma, çalışma"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="17dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:backgroundTint="@color/card"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="5dp"
            android:padding="2dp">
            <TextView
                android:id="@+id/option_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:text="çalışmak, çalışma,"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="17dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:backgroundTint="@color/card"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="5dp"
            android:padding="2dp">
            <TextView
                android:id="@+id/option_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:text="çalışmak, çalışma,"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="17dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:backgroundTint="@color/card"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="5dp"
            android:padding="2dp">
            <TextView
                android:id="@+id/option_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:text="çalışmak, çalışma,"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="17dp"/>
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:text="@string/next"
            android:textColor="@color/text"
            android:textSize="25dp"
            android:textStyle="bold"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
